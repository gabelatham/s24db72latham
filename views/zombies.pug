extends layout

block content
  h1= title

    - let zombies = results
  //- let results = [{zombie_type:"Runner", height:72, turn_age:2},{zombie_type:"Charger", height:78, turn_age:4},{zombie_type:"Climber", height:60, turn_age:1}]
  button.btn(class="btn-primary ml-1", onclick=`dispatch(\"/zombies/create\")`) Create

  div(class="container-fluid")
    div(class="row m-1")
    each item in zombies 
      div(class="col-sm-3") Type: #{item.zombie_type} Height: #{item.height} Turned Age: #{item.turn_age} 
        button.btn(class="btn-primary ml-1", onclick=`dispatch(\"/zombies/detail?id=${item._id}\")`) Detail
        button.btn(class="btn-primary ml-1", onclick=`dispatch(\"/zombies/update?id=${item._id}\")`) Update
        button.btn(class="btn-primary ml-1", onclick=`dispatch(\"/zombies/delete?id=${item._id}\")`) Delete
    
    script.
      function dispatch(path){
        window.location.href = path
      }